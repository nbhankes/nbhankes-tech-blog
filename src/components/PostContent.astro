---
import Section from './Section.astro';
---

<Section>
	<div
		class="content prose dark:prose-invert prose-code:rounded-lg prose-code:bg-stone-800 prose-code:p-1 prose-code:text-orange-600 prose-img:rounded-lg prose-img:shadow-xl prose-img:dark:shadow-stone-800 mt-8 max-w-none text-base leading-8 text-black dark:text-white"
	>
		<slot />
	</div>
</Section>

<style is:global>
/* Only inline code inside prose */
.prose :not(pre) > code::before,
.prose :not(pre) > code::after {
  content: "";
}

.prose :not(pre) > code {
  background-color: #22272e; /* Tailwind gray-100 */
  color: #adbac7;           /* Tailwind gray-900 */
  border-radius: 0.25rem;
  padding: 0.25rem 0.25rem;
  font-size: 0.875em;
  font-weight: 400;
}

/* Ensure block code (pre > code) keeps its styling */
.prose pre code {
  background-color: transparent; /* let the <pre> handle bg */
  padding: 0;
  color: inherit;
  font-size: inherit;
}
</style>
